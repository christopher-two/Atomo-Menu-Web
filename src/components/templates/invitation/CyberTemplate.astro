---
import type { Invitation } from "../../../domain/models/Invitation";

interface Props {
  invitation: Invitation;
}

const { invitation } = Astro.props;
---

<div class="cyber-invitation min-h-screen bg-[#f0f0f0] font-mono text-black overflow-hidden relative flex items-center justify-center p-4">
    <div class="absolute inset-0 opacity-[0.03] pointer-events-none z-50 bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"></div>

    <div class="max-w-3xl w-full relative z-10">
        <div class="bg-white border-[4px] border-black shadow-[12px_12px_0px_0px_rgba(0,0,0,1)] p-8 md:p-16 relative">
             <div class="absolute -top-6 -left-6 bg-[#ff5f1f] text-white p-3 border-[3px] border-black shadow-[4px_4px_0px_0px_#000] rotate-[-5deg] z-20">
                 <span class="font-black text-xl uppercase">Incoming_Transmission</span>
             </div>

             <header class="mb-12 border-b-[4px] border-black pb-8 text-center">
                 <h1 class="text-5xl md:text-8xl font-black uppercase tracking-tighter leading-[0.85] mb-4">{invitation.event_name}</h1>
                 <div class="inline-block bg-black text-white px-4 py-1 font-bold text-lg uppercase transform rotate-1">
                    Event_Log_Entry
                 </div>
             </header>

             <div class="grid md:grid-cols-2 gap-8 mb-12">
                 <div class="bg-gray-100 border-[3px] border-black p-6">
                     <h2 class="font-black uppercase text-xl mb-2 flex items-center gap-2">
                        <span class="w-3 h-3 bg-[#ff5f1f]"></span> Timestamp
                     </h2>
                     <p class="text-3xl font-bold font-mono">
                        {invitation.event_date ? new Date(invitation.event_date).toLocaleDateString(undefined, { month: '2-digit', day: '2-digit', year: '2-digit' }) : "TBD"}
                     </p>
                     <p class="text-xl font-bold text-gray-400">
                        {invitation.event_date ? new Date(invitation.event_date).toLocaleTimeString(undefined, { hour12: false, hour: '2-digit', minute: '2-digit' }) : "00:00"}
                     </p>
                 </div>

                 <div class="bg-gray-100 border-[3px] border-black p-6">
                     <h2 class="font-black uppercase text-xl mb-2 flex items-center gap-2">
                        <span class="w-3 h-3 bg-[#ff5f1f]"></span> Coordinates
                     </h2>
                     <p class="text-lg font-bold uppercase leading-tight">
                        {invitation.location}
                     </p>
                 </div>
             </div>

             {invitation.description && (
                 <div class="mb-12 font-bold text-lg leading-tight p-4 bg-[#ff5f1f]/10 border-l-[6px] border-[#ff5f1f]">
                     > {invitation.description}
                 </div>
             )}

             <button class="w-full bg-black text-white py-6 font-black uppercase text-2xl tracking-tight hover:bg-[#ff5f1f] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-none shadow-[6px_6px_0px_0px_gray] transition-all border-[3px] border-black">
                 Acknowledge_Receipt [RSVP]
             </button>
        </div>
    </div>
</div>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap");
  .cyber-invitation { font-family: "Space Grotesk", sans-serif; }
</style>
