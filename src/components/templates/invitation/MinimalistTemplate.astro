---
import type { Invitation } from "../../../domain/models/Invitation";

interface Props {
  invitation: Invitation;
}

const { invitation } = Astro.props;
---

<div
  class="minimalist-invitation min-h-screen bg-white dark:bg-neutral-900 text-neutral-900 dark:text-neutral-50 flex items-center justify-center py-12 px-4 font-sans"
>
  <div class="max-w-xl w-full text-center">
    <div class="mb-12">
      <span
        class="text-xs font-bold uppercase tracking-[0.3em] text-neutral-400"
        >You are invited to</span
      >
    </div>

    <h1
      class="text-5xl md:text-7xl font-light tracking-tight mb-8 leading-tight"
    >
      {invitation.event_name}
    </h1>

    <div class="w-12 h-px bg-neutral-200 dark:bg-neutral-700 mx-auto mb-12">
    </div>

    <div class="space-y-2 mb-12 text-lg md:text-xl font-light">
      <p class="font-medium text-neutral-900 dark:text-white">
        {
          invitation.event_date
            ? new Date(invitation.event_date).toLocaleDateString(undefined, {
                weekday: "long",
                year: "numeric",
                month: "long",
                day: "numeric",
                hour: "numeric",
                minute: "numeric",
              })
            : "Date TBD"
        }
      </p>
      <p class="text-neutral-500">{invitation.location}</p>
    </div>

    {
      invitation.description && (
        <p class="text-neutral-500 max-w-sm mx-auto mb-16 leading-relaxed">
          {invitation.description}
        </p>
      )
    }

    <button
      class="bg-black dark:bg-white text-white dark:text-black px-12 py-4 text-xs font-bold uppercase tracking-[0.2em] hover:opacity-80 transition-opacity"
    >
      RSVP Now
    </button>
  </div>
</div>
