---
import type { CV } from "../../../domain/models/CV";

interface Props {
  cv: CV;
}

const { cv } = Astro.props;
---

<div
  class="modern-cv bg-[#f3f3f3] min-h-screen font-sans text-black relative py-20 px-6 md:px-12"
>
  <div class="container mx-auto max-w-5xl">
    <header class="mb-20 grid md:grid-cols-[2fr_1fr] gap-8 items-end">
      <div>
        <h1
          class="text-6xl md:text-8xl font-bold uppercase leading-[0.85] tracking-tighter text-transparent bg-clip-text bg-gradient-to-br from-black to-gray-600 mb-6"
        >
          {cv.title}
        </h1>
        {
          cv.professional_summary && (
            <p class="text-xl md:text-2xl font-medium text-gray-500 leading-tight bg-white p-6 border-l-4 border-black">
              {cv.professional_summary}
            </p>
          )
        }
      </div>

      <div class="text-right">
        <div
          class="inline-block bg-black text-white px-4 py-2 font-bold uppercase tracking-widest text-sm transform -rotate-2"
        >
          Curriculum Vitae
        </div>
      </div>
    </header>

    <div class="grid md:grid-cols-[1fr_2fr] gap-16">
      <aside class="space-y-16">
        {
          cv.skills && cv.skills.length > 0 && (
            <section>
              <h3 class="text-xl font-bold uppercase mb-8 border-b-2 border-black pb-2 inline-block">
                Skills/Tech
              </h3>
              <div class="flex flex-wrap gap-3">
                {cv.skills.map((skill) => (
                  <span class="bg-white border-2 border-black px-3 py-1 font-bold text-sm shadow-[4px_4px_0px_0px_rgba(0,0,0,0.1)] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px] transition-all">
                    {skill.name}
                  </span>
                ))}
              </div>
            </section>
          )
        }

        {/* Education */}
        {
          cv.education && cv.education.length > 0 && (
            <section>
              <h3 class="text-xl font-bold uppercase mb-8 border-b-2 border-black pb-2 inline-block">
                Education
              </h3>
              <div class="space-y-8">
                {cv.education.map((edu) => (
                  <div class="bg-white p-6 border-l-4 border-gray-300 hover:border-black transition-colors">
                    <h4 class="font-bold text-lg">{edu.institution}</h4>
                    <p class="text-gray-500 font-medium">{edu.degree}</p>
                    <span class="text-xs font-bold uppercase tracking-wide text-gray-400 mt-2 block">
                      {edu.start_date
                        ? new Date(edu.start_date).getFullYear()
                        : ""}{" "}
                      -{" "}
                      {edu.is_current
                        ? "Present"
                        : edu.end_date
                          ? new Date(edu.end_date).getFullYear()
                          : ""}
                    </span>
                  </div>
                ))}
              </div>
            </section>
          )
        }
      </aside>

      <main>
        {
          cv.experience && cv.experience.length > 0 && (
            <section>
              <h3 class="text-3xl font-bold uppercase mb-12 border-b-4 border-black pb-4">
                Professional Experience
              </h3>
              <div class="space-y-12">
                {cv.experience.map((exp) => (
                  <article class="group relative pl-8 border-l-2 border-gray-300 hover:border-black transition-colors duration-300">
                    <div class="absolute -left-[9px] top-0 w-4 h-4 bg-white border-2 border-black rounded-full group-hover:bg-black transition-colors" />

                    <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
                      <h4 class="text-2xl font-extrabold uppercase">
                        {exp.role}
                      </h4>
                      <span class="font-mono text-sm font-bold bg-gray-200 px-2 py-1 rounded">
                        {exp.start_date
                          ? new Date(exp.start_date).getFullYear()
                          : ""}{" "}
                        -{" "}
                        {exp.is_current
                          ? "Present"
                          : exp.end_date
                            ? new Date(exp.end_date).getFullYear()
                            : ""}
                      </span>
                    </div>
                    <h5 class="text-xl font-bold text-gray-500 mb-4">
                      {exp.company}
                    </h5>
                    {exp.description && (
                      <p class="text-lg text-gray-700 leading-relaxed font-medium">
                        {exp.description}
                      </p>
                    )}
                  </article>
                ))}
              </div>
            </section>
          )
        }
      </main>
    </div>

    <footer
      class="mt-24 border-t-4 border-black pt-8 flex justify-between items-center text-sm font-bold uppercase tracking-widest text-gray-400"
    >
      <span>Override Templates</span>
      <span>Modern CV</span>
    </footer>
  </div>
</div>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800;900&display=swap");
  .modern-cv {
    font-family: "Inter", sans-serif;
  }
</style>
