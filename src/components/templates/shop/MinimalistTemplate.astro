---
import type { Shop } from "../../../domain/models/Shop";

interface Props {
  shop: Shop;
}

const { shop } = Astro.props;
---

<div
  class="minimalist-shop min-h-screen bg-white dark:bg-neutral-900 text-neutral-900 dark:text-neutral-50 font-sans py-20 px-6"
>
  <div class="max-w-7xl mx-auto">
    <header class="mb-24 text-center">
      <h1 class="text-4xl md:text-5xl font-medium tracking-tight mb-4">
        {shop.name}
      </h1>
      <p class="text-neutral-500 max-w-2xl mx-auto">{shop.description}</p>
    </header>

    {
      shop.categories?.map((category) => (
        <section class="mb-24">
          <h2 class="text-2xl font-light mb-12 border-b border-neutral-200 pb-4">
            {category.name}
          </h2>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-8 gap-y-12">
            {category.products?.map((product) => (
              <article class="group">
                <div class="aspect-square bg-neutral-100 dark:bg-neutral-800 mb-4 overflow-hidden relative">
                  {product.image_url ? (
                    <img
                      src={product.image_url}
                      alt={product.name}
                      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    />
                  ) : (
                    <div class="w-full h-full flex items-center justify-center text-neutral-400 text-sm">
                      No Image
                    </div>
                  )}

                  {product.stock <= 0 && (
                    <div class="absolute inset-0 bg-white/60 dark:bg-black/60 flex items-center justify-center backdrop-blur-[1px]">
                      <span class="text-xs font-bold uppercase tracking-widest bg-black text-white px-3 py-1">
                        Sold Out
                      </span>
                    </div>
                  )}
                </div>

                <div class="flex justify-between items-start">
                  <div>
                    <h3 class="font-medium text-lg leading-tight mb-1">
                      {product.name}
                    </h3>
                    <span class="text-sm text-neutral-500">
                      {product.description}
                    </span>
                  </div>
                  <span class="font-medium">
                    ${Number(product.price).toFixed(2)}
                  </span>
                </div>
              </article>
            ))}
          </div>
        </section>
      ))
    }
  </div>
</div>
