---
import type { Menu } from "../../../domain/models/DigitalMenu";

interface Props {
  menu: Menu;
}

const { menu } = Astro.props;
---

<div
  data-preview="root"
  class="cyber-template min-h-screen bg-[#f0f0f0] font-mono text-black overflow-x-hidden relative"
>
  <!-- Noise Texture Overlay -->
  <div
    class="absolute inset-0 opacity-[0.03] pointer-events-none z-50 bg-[url('https://grainy-gradients.vercel.app/noise.svg')]"
  >
  </div>

  <div class="max-w-6xl mx-auto px-4 py-12 md:py-20 relative z-10">
    <header class="mb-16 md:mb-24 text-center md:text-left">
      <div
        class="bg-white border-[3px] md:border-[4px] border-black shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] md:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] p-6 md:p-10 inline-block rotate-[-1deg] hover:rotate-0 transition-transform duration-300"
      >
        <h1
          data-preview="name"
          class="text-4xl md:text-6xl lg:text-7xl font-black uppercase tracking-tighter break-words max-w-full"
        >
          {menu.name}
        </h1>
      </div>
      {
        menu.description && (
          <div class="mt-6 md:mt-8 block md:inline-block md:ml-4">
            <div class="bg-[#ff5f1f] border-[3px] border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] p-4 rotate-[1deg] hover:rotate-0 transition-transform duration-300">
              <p
                data-preview="description"
                class="text-white font-bold uppercase text-base md:text-xl leading-tight"
              >
                {menu.description}
              </p>
            </div>
          </div>
        )
      }
    </header>

    <main
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-10 pb-20"
    >
      {/* Render Categories */}
      {
        menu.categories?.map((category) => (
          <>
            <div class="col-span-full mt-8 mb-4">
              <div class="bg-black text-white inline-block p-4 rotate-[1deg] shadow-[4px_4px_0px_0px_#ff5f1f]">
                <h2 class="text-3xl font-black uppercase tracking-tighter">
                  {category.name}
                </h2>
              </div>
            </div>
            {category.dishes?.map((dish: any, index: number) => (
              <div
                class={`bg-white border-[3px] border-black shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] p-6 h-full flex flex-col transition-all duration-300 hover:translate-x-[-4px] hover:translate-y-[-4px] hover:shadow-[10px_10px_0px_0px_rgba(0,0,0,1)]`}
              >
                <div class="mb-4">
                  <h3 class="text-xl md:text-2xl font-black uppercase border-b-4 border-black pb-2 mb-3 leading-none">
                    {dish.name}
                  </h3>
                  <p class="text-sm md:text-base font-bold text-gray-700 leading-tight">
                    {dish.description}
                  </p>
                </div>
                <div class="mt-auto pt-6 flex justify-between items-center bg-black p-3 -mx-2 -mb-2 border-t-[3px] border-black">
                  <span class="text-white font-black tracking-wider text-sm">
                    PRICE
                  </span>
                  <span class="bg-[#ff5f1f] text-white px-4 py-1 font-black text-lg border border-white">
                    ${dish.price}
                  </span>
                </div>
              </div>
            ))}
          </>
        ))
      }

      {/* Render Uncategorized Dishes (Orphans) */}
      {
        (menu.dishes ?? [])?.filter((d: any) => !d.category_id).length > 0 && (
          <>
            <div class="col-span-full mt-8 mb-4">
              <div class="bg-black text-white inline-block p-4 rotate-[-1deg] shadow-[4px_4px_0px_0px_#ff5f1f]">
                <h2 class="text-3xl font-black uppercase tracking-tighter">
                  General
                </h2>
              </div>
            </div>
            <div class="space-y-16 md:space-y-20">
              {(menu.dishes ?? [])
                ?.filter((d: any) => !d.category_id)
                .map((dish: any, index: number) => (
                  <div
                    class={`bg-white border-[3px] border-black shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] p-6 h-full flex flex-col transition-all duration-300 hover:translate-x-[-4px] hover:translate-y-[-4px] hover:shadow-[10px_10px_0px_0px_rgba(0,0,0,1)]`}
                  >
                    <div class="mb-4">
                      <h3 class="text-xl md:text-2xl font-black uppercase border-b-4 border-black pb-2 mb-3 leading-none">
                        {dish.name}
                      </h3>
                      <p class="text-sm md:text-base font-bold text-gray-700 leading-tight">
                        {dish.description}
                      </p>
                    </div>
                    <div class="mt-auto pt-6 flex justify-between items-center bg-black p-3 -mx-2 -mb-2 border-t-[3px] border-black">
                      <span class="text-white font-black tracking-wider text-sm">
                        PRICE
                      </span>
                      <span class="bg-[#ff5f1f] text-white px-4 py-1 font-black text-lg border border-white">
                        ${dish.price}
                      </span>
                    </div>
                  </div>
                ))}
            </div>
          </>
        )
      }
    </main>

    <footer class="mt-12 text-center text-xs font-bold uppercase opacity-40">
      <p>Powered by Override</p>
    </footer>
  </div>
</div>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap");

  .cyber-template {
    font-family: "Space Grotesk", sans-serif;
  }

  button:active {
    box-shadow: none;
    transform: translate(3px, 3px);
  }
</style>
