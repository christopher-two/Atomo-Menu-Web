---
import type { Menu } from "../../domain/models/DigitalMenu";

interface Props {
    menu: Menu;
}

const { menu } = Astro.props;
---

<div class="modern-template bg-[#f3f3f3] min-h-screen font-sans text-black">
    <div class="container mx-auto px-6 py-16">
        <header class="mb-20">
            <h1 class="text-3xl font-medium mb-10 tracking-tight">
                {menu.name}
            </h1>
            <h2
                class="text-7xl md:text-9xl font-bold uppercase leading-[0.85] tracking-tighter"
            >
                {menu.description || "MENÚ DE LA CASA"}
            </h2>
        </header>

        <section>
            <h3
                class="text-2xl font-bold uppercase mb-8 tracking-wide border-b-2 border-black pb-2"
            >
                Nuestra Selección
            </h3>

            <div class="space-y-12">
                {
                    menu.dishes?.map((dish: any) => (
                        <div class="dish-item group">
                            <div class="flex flex-col md:flex-row md:justify-between md:items-end gap-2 mb-4">
                                <h4 class="text-xl md:text-2xl font-extrabold uppercase tracking-tight">
                                    {dish.name}
                                </h4>
                                <div class="flex-grow border-b border-black border-dotted mb-1 mx-4 hidden md:block" />
                                <span class="text-lg font-bold whitespace-nowrap">
                                    MXN {Number(dish.price).toFixed(2)}
                                </span>
                            </div>
                            <p class="text-sm md:text-base text-gray-700 max-w-3xl leading-relaxed">
                                {dish.description}
                            </p>
                        </div>
                    ))
                }
            </div>
        </section>
    </div>
</div>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;800;900&display=swap");

    .modern-template {
        font-family: "Inter", sans-serif;
    }

    .tracking-tighter {
        letter-spacing: -0.05em;
    }
</style>
