---
import type { Menu } from "../../domain/models/DigitalMenu";

interface Props {
    menu: Menu;
}

const { menu } = Astro.props;
---

<div class="cyber-template min-h-screen bg-[#f0f0f0] p-6 font-mono text-black">
    <div class="max-w-5xl mx-auto">
        <header class="mb-12">
            <div
                class="bg-white border-[4px] border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] p-8 inline-block rotate-[-1deg]"
            >
                <h1
                    class="text-5xl md:text-7xl font-black uppercase tracking-tighter"
                >
                    {menu.name}
                </h1>
            </div>
            {
                menu.description && (
                    <div class="mt-8 bg-[#ff5f1f] border-[3px] border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] p-4 inline-block rotate-[1deg]">
                        <p class="text-white font-bold uppercase text-lg">
                            {menu.description}
                        </p>
                    </div>
                )
            }
        </header>

        <main class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                menu.dishes?.map((dish: any, index: number) => (
                    <div
                        class={`bg-white border-[3px] border-black shadow-[6px_6px_0px_0px_rgba(0,0,0,1)] p-6 transition-transform hover:translate-x-[-2px] hover:translate-y-[-2px] hover:shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] ${index % 2 === 0 ? "rotate-[0.5deg]" : "rotate-[-0.5deg]"}`}
                    >
                        <h3 class="text-xl font-black uppercase mb-3 border-b-2 border-black pb-2">
                            {dish.name}
                        </h3>
                        <p class="text-sm font-bold text-gray-700 mb-6 leading-tight">
                            {dish.description}
                        </p>
                        <div class="flex justify-between items-center bg-black p-2 mt-auto">
                            <span class="text-white font-black">PRICE</span>
                            <span class="bg-[#ff5f1f] text-white px-3 py-1 font-black">
                                ${dish.price}
                            </span>
                        </div>
                    </div>
                ))
            }
        </main>

        <footer class="mt-20 flex justify-end gap-4">
            {
                ["DEFAULT", "SOLARIZED", "CYBER", "VIBRANT"].map((btn) => (
                    <button class="bg-white border-[2px] border-black shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] px-4 py-1 text-xs font-black uppercase hover:bg-[#ff5f1f] hover:text-white transition-colors">
                        {btn}
                    </button>
                ))
            }
        </footer>
    </div>
</div>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap");

    .cyber-template {
        font-family: "Space Grotesk", sans-serif;
    }

    button:active {
        box-shadow: none;
        transform: translate(3px, 3px);
    }
</style>
